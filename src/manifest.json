{
    "name": "Repost Shrink",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Shrink the X repost to make the timeline easier to view",
    "host_permissions": [
        "https://x.com/"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://x.com/*"],
            "js": ["repost-shrink.user.js"],
            "run_at": "document_end"
        }
    ]
}
